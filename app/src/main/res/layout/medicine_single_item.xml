<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/medicine_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="99"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/medicine_hour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="23"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text=":"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/medicine_minute"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="59"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/medicine_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"
            android:text="Mon Tue Wed Thu Fri Sat Sun"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="4dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:text="Medicine Name"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/medicine_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1.0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/medicine_quality"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:text="adhesive(s)"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Switch
            android:id="@+id/alarm_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
        android:layout_marginRight="10dp"
            android:checked="true"/>

        <ImageView
            android:id="@+id/delete_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/cross" />
    </LinearLayout>

</LinearLayout>