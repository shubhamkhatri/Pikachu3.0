<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:cardCornerRadius="6dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginLeft="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="@dimen/smallText"/>

                <TextView
                    android:id="@+id/list_donar_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="5dp"
                    android:text="22.03.2017"
                    android:textStyle="bold"
                    android:textSize="@dimen/smallText"
                    android:textColor="@color/colorPrimaryDark"/>


                <TextView
                    android:id="@+id/list_donar_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_text"
                    android:layout_marginBottom="4dp"
                    android:text="Shubham"
                    android:textSize="@dimen/normalText"
                    android:textColor="@color/heading_text"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group"
                android:textSize="@dimen/smallText"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_donar_blood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="AB+"
                android:textSize="@dimen/normalText"
                android:textColor="@color/heading_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City" 
                android:layout_below="@id/list_donar_blood"
                android:textSize="@dimen/smallText" />
            
                <ImageView
                    android:id="@+id/list_donar_gender"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/male"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/list_donar_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delhi"
                android:textSize="@dimen/normalText"
                android:textColor="@color/heading_text"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
