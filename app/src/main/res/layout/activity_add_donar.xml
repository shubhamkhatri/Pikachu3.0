<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDonar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingTop="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Personal Information"
            android:textSize="@dimen/heading2"
            android:textColor="@color/heading"
            android:textStyle="bold"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/donar_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/donar_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/donar_phnNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Gender"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>

        <RadioGroup
            android:id="@+id/donar_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/donar_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Male" />

            <RadioButton
                android:id="@+id/donar_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Female" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/donar_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/donar_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Location of donation"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/donar_location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="No location Selected" />

        <Button
            android:id="@+id/donar_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Select"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button"
            android:background="@drawable/roundedbutton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Blood Type"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/donar_blood_a"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:text="A"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:button="@null"
                android:background="@drawable/blood_group_background" />

            <RadioButton
                android:id="@+id/donar_blood_b"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:text="B"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:button="@null"
                android:background="@drawable/blood_group_background"/>

            <RadioButton
                android:id="@+id/donar_blood_ab"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:text="AB"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:button="@null"
                android:background="@drawable/blood_group_background" />

            <RadioButton
                android:id="@+id/donar_blood_o"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/blood_group_background"
                android:button="@null"
                android:text="O"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/donar_blood_negative"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:button="@null"
                android:background="@drawable/blood_group_background" />

            <RadioButton
                android:id="@+id/donar_blood_positive"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:button="@null"
                android:background="@drawable/blood_group_background"/>

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/donar_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/donar_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/donar_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/donar_confirmPass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/donar_confirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/donar_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save"
            android:textSize="@dimen/button"
            android:textColor="@android:color/white"
            android:background="@drawable/roundedbutton"/>

        <TextView
            android:id="@+id/donar_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/already_user"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>