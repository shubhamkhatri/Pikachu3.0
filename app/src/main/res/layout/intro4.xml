<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="serif-monospace"
        android:text="BMI CALCULATOR"
        android:textColor="@color/heading"
        android:textSize="@dimen/heading"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:text="Wanna be fit? Just check your Body Mass Index with Pikachu with weight and height."
        android:textAlignment="center"
        android:textSize="@dimen/normalText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/text_description1"
        android:layout_centerHorizontal="true"
        android:background="#f5d6d4"
        android:src="@drawable/intro4" />

</RelativeLayout>