<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonarProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/heading"
                android:textSize="@dimen/smallText"/>

            <TextView
                android:id="@+id/profile_donar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="22.03.2017"
                android:textStyle="bold"
                android:textColor="@color/heading"
                android:textSize="@dimen/smallText"/>


            <TextView
                android:id="@+id/profile_donar_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_text"
                android:layout_marginBottom="6dp"
                android:text="Shubham"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_donar_blood"
            android:text="Age"
            android:textColor="@color/heading"
            android:textSize="@dimen/smallText"/>

        <TextView
            android:id="@+id/profile_donar_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="21"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_donar_blood"
            android:text="Phone Number"
            android:textColor="@color/heading"
            android:textSize="@dimen/smallText"/>

        <TextView
            android:id="@+id/profile_donar_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="9616488892"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_donar_blood"
            android:text="Gender"
            android:textColor="@color/heading"
            android:textSize="@dimen/smallText"/>

        <TextView
            android:id="@+id/profile_donar_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Male"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_donar_blood"
            android:text="Address"
            android:textColor="@color/heading"
            android:textSize="@dimen/smallText"/>

        <TextView
            android:id="@+id/profile_donar_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Xyz,India"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_donar_blood"
            android:text="City"
            android:textColor="@color/heading"
            android:textSize="@dimen/smallText"/>

        <TextView
            android:id="@+id/profile_donar_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Delhi"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_donar_blood"
            android:text="GPS Location"
            android:textColor="@color/heading"
            android:textSize="@dimen/smallText"/>

        <TextView
            android:id="@+id/profile_donar_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="122 st, kanpur "
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_donar_blood"
            android:text="Blood Group"
            android:textColor="@color/heading"
            android:textSize="@dimen/smallText"/>

        <TextView
            android:id="@+id/profile_donar_blood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="AB+"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_donar_blood"
            android:text="Email"
            android:textColor="@color/heading"
            android:textSize="@dimen/smallText"/>

        <TextView
            android:id="@+id/profile_donar_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="abc@gmail.com"
            android:textSize="18sp" />

        <Button
            android:id="@+id/profile_donar_mapView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Show Location"
            android:textSize="@dimen/button"
            android:textColor="@android:color/white"
            android:background="@drawable/roundedbutton"
            android:layout_marginBottom="5dp" />

        <Button
            android:id="@+id/profile_donar_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundedbutton"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/button"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />

    </LinearLayout>

</ScrollView>